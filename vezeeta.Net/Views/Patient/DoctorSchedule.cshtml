@{
    Layout = "_Layout1";
}
@using Data;
@model IEnumerable<Day>;
<h1>Doctor Appointments</h1>


<table>
    <thead>
        <tr>

            <th>Day</th>
            <th>From</th>
            <th>To</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var eachModel in Model)
        {
            <tr>

                <td>@eachModel.WeekDay</td>

                @foreach(var time in eachModel.Times)
                {
                    <td>@time.From</td>
                    <td>@time.To</td>
                
              
                <th>             
                <form asp-controller="Patient" asp-action="Book" method="post">
                    <input type="hidden" name="Id" value=@eachModel.Id />
                    <button type="submit">Book</button>

                </form>

                </th>
                }
            </tr>

        }
    </tbody>
</table>